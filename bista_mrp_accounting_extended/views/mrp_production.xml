        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="show_journal_entries" class="oe_stat_button" string="Accounting Entries" type="object" states="done" icon="fa-dollar" groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>
