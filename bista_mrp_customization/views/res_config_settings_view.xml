<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_transfer_validation"
            model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.view.transfer.validation
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='mrp_lock']" position="after">
                <div class="col-lg-6 col-12 o_setting_box" id="mrp_transfer_validation">
                    <div class="o_setting_left_pane">
                        <field name="is_transfer_process_validation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_transfer_process_validation"/>
                        <div class="text-muted">
                            Want to check Transfers processed or not before the Manufacturing Order process
                        </div>
                    </div>
                </div>
            </xpath>
        </field>

    </record>
</odoo>