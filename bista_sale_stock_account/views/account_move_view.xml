<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_move_form_delivery_tab" model="ir.ui.view">
        <field name="name">account.move.form.delivery.tab</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@id='other_tab_entry']" position="after">
                <page string="Delivery" name="delivery_tab"
                      attrs="{'invisible': [('move_type', 'not in', ['out_invoice','out_refund'])]}">
                    <group>
                        <group>
                            <field name="preferred_carrier_id" readonly="1"/>
                            <field name="acc_number" readonly="1"/>
                            <field name="tracking_no" readonly="1"/>
                        </group>
                        <label style="font-weight:bold;" for="delivery_instruction"
                               string="Delivery Instructions:"/>
                        <field name="delivery_instruction" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
