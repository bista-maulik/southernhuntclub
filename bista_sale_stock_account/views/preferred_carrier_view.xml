<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_preferred_carrier_tree" model="ir.ui.view">
        <field name="name">preferred.carrier.tree.view</field>
        <field name="model">preferred.carrier</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Preferred Carrier">
                <field name="name"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_preferred_carrier" model="ir.actions.act_window">
        <field name="name">Preferred Carrier</field>
        <field name="res_model">preferred.carrier</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_preferred_carrier"
              name="Preferred Carrier"
              action="action_preferred_carrier"
              parent="stock.menu_stock_config_settings"/>
</odoo>
