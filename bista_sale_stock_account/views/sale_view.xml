<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit the sale order form view to add delivery tab-->
    <record id="view_order_form_delivery_tab" model="ir.ui.view">
        <field name="name">sale.order.form.delivery.tab</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='other_information']" position="after">
                <page string="Delivery" name="delivery_tab">
                    <group>
                        <group>
                            <field name="preferred_carrier_id" attrs="{'readonly': [('state', 'not in' ,['draft', 'sent'])]}"/>
                            <field name="acc_number" attrs="{'readonly': [('state', 'not in' ,['draft', 'sent'])]}"/>
                        </group>
                        <label style="font-weight:bold;" for="delivery_instruction"
                               string="Delivery Instructions:"/>
                        <field name="delivery_instruction" placeholder="Add Delivery Instructions Here..."
                               attrs="{'readonly': [('state', 'not in' ,['draft', 'sent'])]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
