<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <function name="write" model="ir.actions.report">
            <function name="search" model="ir.actions.report">
                <value eval="[('model', '=', 'account.payment'), ('report_name', '=', 'l10n_us_check_printing.print_check_top')]"/>
            </function>
            <value eval="{'attachment_use': False}"/>
        </function>

        <template id="ckus_check_change_alignment"
                  inherit_id="l10n_us_check_printing.ckus_check">
            <xpath expr="//div[hasclass('ckus_check')]" position="attributes">
                <attribute name="style">margin-top: -22px;</attribute>
            </xpath>
            <xpath expr="//div[hasclass('ckus_check')]/div[hasclass('ckus_memo')]"
                   position="attributes">
                <attribute name="style">margin-top: 10px;</attribute>
            </xpath>
            <xpath expr="//div[hasclass('ckus_check')]/div[hasclass('ckus_amount')]"
                   position="attributes">
                <attribute name="style">margin-top: 6px;</attribute>
            </xpath>
            <xpath expr="//div[hasclass('ckus_check')]/div[hasclass('ckus_payee_addr')]"
                   position="attributes">
                <attribute name="style">margin-top: 17px;</attribute>
            </xpath>
        </template>
    </data>
</odoo>
