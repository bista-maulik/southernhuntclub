<?xml version="1.0" encoding="utf-8"?>
    <odoo>
       <record id="view_pending_delivery_orders_report_tree" model="ir.ui.view">
            <field name="name">pending.delivery.orders.report.tree</field>

            <field name="model">pending.delivery.orders.report</field>
            <field name="arch" type="xml">
                <tree string="Pending DO" sample="1" create="0" edit="0" delete="0">                                
                    <field name="sale_id" optional="hide"/>
                    <field name="partner_id" optional="hide"/>
                    <field name="product_id" />
                    <field name="pending_qty" optional="hide"/>
                    <field name="delivery_date" widget="remaining_days" optional="hide"/>
<!--                    <field name="available_qty" optional="hide"/>-->
<!--                    <field name="product_qty" optional="hide"/>-->
                    <field name="on_hand_qty" optional="hide"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="name"  optional="hide" invisible="1" />
                    <field name="state"  optional="hide" invisible="1" />
                    <field name="picking_type_id" invisible="1" optional="hide"/>   
                </tree>
            </field>
        </record>

        <record id="view_pending_delivery_orders_report_action" model="ir.actions.act_window">
            <field name="name">Pending DO</field>

            <field name="res_model">pending.delivery.orders.report</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="search_pending_delivery_orders_report" model="ir.ui.view">
            <field name="name">pending.delivery.orders.report.search</field>
            <field name="model">pending.delivery.orders.report</field>
            <field name="arch" type="xml">
                <search string="Pending PO Analysis">
                    <field name="delivery_date"/>
                    <field name="product_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Product" name="product_id" context="{'group_by':'product_id'}"/>
                        <filter string="Delivery Date" name="delivery_date" context="{'group_by':'delivery_date'}"/>
                    </group>
                </search>
            </field>
        </record>
    

    <menuitem id="menu_pending_do_report" name="Pending DO" parent="stock.menu_warehouse_report" action="view_pending_delivery_orders_report_action"/>
</odoo>
