<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="external_layout_standard_company_address_right" inherit_id="web.external_layout_standard">
        <xpath expr="//div[1]/div[3]" position="replace">
            <div class="row" t-if="o and o._name == 'stock.picking' and o.picking_type_code == 'outgoing'" style="float:right;">
                <div class="col-1" name="address" style="float:left;">
                </div>
                <div class="col-11" name="company_address" style="float:right;">
                    <div t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                </div>
            </div>
            <div t-else="" class="row">
                <div class="col-6" name="company_address">
                    <div t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
