<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit view of product to move responsible in last position-->
    <record id="view_stock_product_template_tree_inherit_responsible"
            model="ir.ui.view">
        <field name="name">product.template.stock.tree.view.responsible</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <field name="responsible_id" position="replace">
            </field>
            <xpath expr="//tree" position="inside">
                <field name="responsible_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit the action of product for set default listview-->
    <record id="stock.product_template_action_product"
            model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form</field>
    </record>
</odoo>
