<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit the product action to set default list view-->
    <record id="mrp.product_template_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- Inherit the product variants action to set default list view-->
    <record id="mrp.mrp_product_variant_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- Inherit product template view to hide compute price from bom button-->
    <record id="view_product_product_ext_form_hide_compute_price" model="ir.ui.view">
        <field name="name">product_extended.product.form.view.hide.compute.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="mrp_account.product_product_ext_form_view2"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_bom_cost']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit product product view to hide compute price from bom button-->
    <record id="view_product_form_normal_hide_compute_price" model="ir.ui.view">
        <field name="name">product.product.view.form.normal.inherit.extended</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp_account.product_product_view_form_normal_inherit_extended"/>
         <field name="arch" type="xml">
            <xpath expr="//button[@name='button_bom_cost']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
     </record>

    <!-- Inherit product product view to hide compute price from bom button-->
    <record id="view_product_variant_easy_edit_hide_compute_price" model="ir.ui.view">
        <field name="name">product.product.view.easy.edit.hide.compute.price</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp_account.product_variant_easy_edit_view_bom_inherit"/>
         <field name="arch" type="xml">
            <xpath expr="//button[@name='button_bom_cost']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
     </record>

</odoo>
