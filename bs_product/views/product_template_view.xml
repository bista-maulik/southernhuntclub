<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_customs" model="ir.ui.view">
        <field name="name">product.template.form.inherit.customs12</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="color"/>
                <field name="upc"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_tree_inherit_category"
            model="ir.ui.view">
        <field name="name">product.template.product.tree.view.category</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="replace">
            </field>
            <field name="default_code" position="after">
                <field name="categ_id" optional="show"/>
            </field>
        </field>
    </record>
</odoo>
