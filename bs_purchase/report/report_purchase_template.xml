<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customization_report_purchaseorder_document_templates" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//th[@name='th_taxes']" position="attributes">
          <attribute name="t-att-style">'display: none;'</attribute>
        </xpath> 

        <xpath expr="//td[@name='td_taxes']" position="attributes">
          <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>

        <xpath expr="//t[@ t-foreach='o.order_line']//span[@t-field='line.product_qty']" position="replace">
            <span t-esc="line.set_product_quantity(line.product_qty)"/>
        </xpath>
       
        <xpath expr="//t[@t-if='o.dest_address_id']//t[@t-set='information_block']//strong[1]" position="attributes">
            <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>

        <xpath expr="//t[@t-if='o.dest_address_id']//t[@t-set='information_block']//div[@t-field='o.dest_address_id']" position="attributes">
            <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>
        
        <xpath expr="//div[@t-if='o.picking_type_id and o.picking_type_id.warehouse_id']" position="attributes">
            <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>
        
        <xpath expr="//t[@t-if='o.dest_address_id']//t[@t-set='information_block']//strong[1]" position="attributes">
            <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>

        <xpath expr="//t[@t-else='']//t[@t-set='information_block']//strong[1]" position="attributes">
            <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>
        
        <xpath expr="//t[@t-set='address']//div[@t-field='o.partner_id']" position="attributes">
            <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>
        
        <xpath expr="//p[@t-if='o.partner_id.vat']" position="attributes">
            <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>

        <xpath expr="//t[@t-set='address']" position="after">
            <table  style="width: 100%;border:none;">
                <tr style="border:none;"  groups="sale.group_delivery_invoice_address">
                    <td style="width:60%;">
                        <t  t-if="o.partner_id">
                            <strong>Vendor Address:</strong>
                            <div t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>
                    </td>
                        
                    <td style="width:40%;"> 
                        <t t-if="o.dest_address_id">
                            <strong>Shipping Address:</strong>
                            <div t-field="o.dest_address_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                        </t>

                        <t t-if="not o.dest_address_id"> 
                            <strong>Shipping Address:</strong>
                            <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                                <span t-field="o.picking_type_id.warehouse_id.name"/>
                                <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                            </div>
                        </t>
                    </td>


                </tr>
            </table> 
        </xpath>


    
    </template>



