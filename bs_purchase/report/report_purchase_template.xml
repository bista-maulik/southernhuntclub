<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customization_report_purchaseorder_document_templates" inherit_id="purchase.report_purchaseorder_document">
       <xpath expr="//th[@name='th_taxes']" position="attributes">
          <attribute name="t-att-style">'display: none;'</attribute>
        </xpath> 

         <xpath expr="//td[@name='td_taxes']" position="attributes">
          <attribute name="t-att-style">'display: none;'</attribute>
        </xpath>

        <xpath expr="//t[@ t-foreach='o.order_line']//span[@t-field='line.product_qty']" position="replace">
            <span t-esc="line.set_product_quantity(line.product_qty)"/>
        </xpath>

    </template>
</odoo>
