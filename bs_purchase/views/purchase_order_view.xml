<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_view_form_inherit_fields_hide_custom" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.fields.hide</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="picking_type_id" domain="[('code','=','incoming'), '|', ('warehouse_id', '=', False), ('warehouse_id.company_id', '=', company_id)]" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
            </xpath>
           <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='name']" position="after">
               <field name="color" optional="show"/>
               <field name="upc" optional="show"/>
           </xpath>
        </field>
    </record>

    <!-- Inherit the product action to set default list view-->
    <record id="purchase.product_normal_action_puchased"
            model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,activity</field>
    </record>

    <!-- Inherit the purchase reporting menu to add user access-->
    <record id="purchase.purchase_report" model="ir.ui.menu">
        <field name="groups_id"
               eval="[(6, 0, [ref('purchase.group_purchase_user')])]"/>
    </record>
</odoo>
