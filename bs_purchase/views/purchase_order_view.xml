<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_view_form_inherit_fields_hide_custom" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.fields.hide</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="picking_type_id" domain="[('code','=','incoming'), '|', ('warehouse_id', '=', False), ('warehouse_id.company_id', '=', company_id)]" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
            </xpath> 

            <!-- <xpath expr="//field[@name='partner_id']" position="attributes">
                  <attribute name="domain" >['|', ('company_id', '=', False), ('company_id', '=', company_id),('is_a_vendor','=',True)]</attribute>
            </xpath> -->
        </field>
    </record>
</odoo>
