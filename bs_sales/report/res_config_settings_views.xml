<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
    <record id="res_config_settings_view_form_inherit_added_customer_address_groups" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.customer_add</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='invoice_delivery_addresses']" position="after">
 <div class="col-12 col-lg-6 o_setting_box" id="customer_addresses_enable_on_report">
                            <div class="o_setting_left_pane">
                                <field name="group_customer_address"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_customer_address"/>
                                <div class="text-muted">
                                    display customer addresses on report
                                </div>
                            </div>
                        </div>
</xpath>
        </field>

    </record>
</odoo>


