<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Multi - Company Record Rules -->
        <!-- Display Record selectable company wise -->
        <record model="ir.rule"
                id="sales_rep_comp_rule_display_record_company_wise">
            <field name="name">Sales Rep Multi-Company</field>
            <field name="model_id" ref="model_sales_rep"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]
            </field>
        </record>

        <record id="group_customer_address" model="res.groups">
            <field name="name">Customer Addresses (Report)</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Define Groups for shows the optional product page in sale order-->
        <record id="group_show_optional_product_page" model="res.groups">
            <field name="name">Show Optional Product Page in Sale Order</field>
        </record>

        <!-- Define Groups for shows the optional product page in sale order-->
        <record id="group_show_customer_signature" model="res.groups">
            <field name="name">Show Customer Signature Page in Sale Order
            </field>
        </record>
    </data>
</odoo>
