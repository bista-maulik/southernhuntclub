<?xml version="1.0"?>
<odoo>
    <record id="sales_order_view_sales_rep_inher" model="ir.ui.view">
        <field name="name">sale.order.form.sales.rep</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='other_information']//field[@name='team_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sales_rep"  required="1" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
            </xpath>
            <xpath expr="//field[@name='show_update_pricelist']" position="before">
                <label for="commitment_date" string="Delivery Date"/>
                <div name="commitment_date_div_custom" class="o_row" >
                    <field name="commitment_date" />
                </div>
                <field name="cancellation_date"  attrs="{'readonly': [('state', 'not in', ['draft','sent'])]}"/>
            </xpath>
            <page name="customer_signature" position="attributes">
                <attribute name="groups">bs_sales.group_show_customer_signature</attribute>
            </page>
        </field>
    </record>

    <!-- Inherit view to set group in optional product page in sale order-->
    <record id="view_sale_order_form_quote_hide_optional_products" model="ir.ui.view">
        <field name="name">sale.order.form.view.hide.optional.product</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
        <field name="arch" type="xml">
            <page name="optional_products" position="attributes">
                <attribute name="groups">bs_sales.group_show_optional_product_page</attribute>
            </page>
        </field>
    </record>

    <record id="view_quotation_tree_sales_rep_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.quotation.inherit.sales.rep</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="sales_rep" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_tree_sales_rep_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.sales.rep</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="sales_rep" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="sale_order_search_inherit_sales_rep_order_tree" model="ir.ui.view">
        <field name="name">sale.order.search.order.tree.inherit.sales.rep</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="before">
                <filter string="Sales Rep" name="sales_rep" domain="[('sales_rep','!=',False)]"/>
            </xpath>
            <xpath expr="//filter[@name='salesperson']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//filter[@name='salesperson']" position="after">
                <filter string="Sales Rep" name="sales_rep" domain="[]" context="{'group_by': 'sales_rep'}"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit the product action to set default the list view-->
    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,activity</field>
        <field name="view_id"></field>
    </record>
</odoo>
